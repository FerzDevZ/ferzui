    <h2 id="ecommerce-components">E-commerce Components</h2>
    
    <h3 id="product-card">Product Card</h3>
    <div class="docs-example">
      <div class="preview">
        <div class="product-card">
          <div class="product-image">
            <img src="https://via.placeholder.com/300x300/3b82f6/ffffff?text=Product" alt="Product Image">
            <div class="product-badge">Sale</div>
            <button class="product-wishlist">❤️</button>
          </div>
          <div class="product-info">
            <div class="product-category">Electronics</div>
            <div class="product-title">Amazing Wireless Headphones</div>
            <div class="product-rating">
